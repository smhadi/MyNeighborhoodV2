<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b_teal">


    <ImageView
        android:id="@+id/myNeighborhoodLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="@id/myNeighborhoodTextLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/my_neighborhood_logo" />


    <ImageView
        android:id="@+id/myNeighborhoodTextLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"

        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/my_neighborhood_text_logo" />

    <TextView
        android:id="@+id/joinText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/h3"
        android:textAlignment="center"
        android:text="Welcome to the solution to all your community networking needs"
        app:layout_constraintBottom_toBottomOf="@id/joinButton"
        app:layout_constraintEnd_toEndOf="@id/myNeighborhoodTextLogo"
        app:layout_constraintStart_toStartOf="@id/myNeighborhoodTextLogo"
        app:layout_constraintTop_toBottomOf="@id/myNeighborhoodTextLogo"
        android:layout_marginBottom="200dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinButton"
        android:layout_width="@dimen/longButtonWidth"
        android:layout_height="@dimen/longButtonHeight"
        style="@style/teal200ButtonStyle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/joinText"
        app:layout_constraintStart_toStartOf="@id/joinText"
        app:layout_constraintEnd_toEndOf="@id/joinText"
        app:layout_constraintBottom_toBottomOf="@id/accountText"
        android:text="Register"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:paddingTop="10dp"
        />
    <TextView
            android:id="@+id/accountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h2"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/joinButton"
            app:layout_constraintStart_toStartOf="@id/joinButton"
            app:layout_constraintEnd_toEndOf="@id/joinButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Already have an account?"
            android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="@id/accountText"
        app:layout_constraintStart_toEndOf="@+id/accountText"
        style="@style/h2Bold"
        />





</androidx.constraintlayout.widget.ConstraintLayout>