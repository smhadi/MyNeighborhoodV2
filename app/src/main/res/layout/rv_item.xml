<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="396dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/g_card_background"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_ad"
            android:layout_width="360dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/dots_three"

             />

        <TextView
            android:id="@+id/tv_ad_name"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:text="Black Fixed Gear Bike"
            app:layout_constraintStart_toStartOf="@id/img_ad"
            app:layout_constraintTop_toBottomOf="@id/img_ad"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/poppins_thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rs. 1600"
            app:layout_constraintEnd_toEndOf="@id/img_ad"
            app:layout_constraintTop_toBottomOf="@id/img_ad"
            android:textColor="@color/dark_green"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_thin"
            />
        <TextView
            android:id="@+id/ad_borrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="No. of Borrows - 17"
            app:layout_constraintStart_toStartOf="@id/tv_ad_name"
            app:layout_constraintTop_toBottomOf="@id/tv_ad_name"
            android:textColor="@color/g_gray500"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_thin"
            />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_borrow"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/white_teal_background"
            android:fontFamily="@font/poppins_light"
            android:text="Borrow"
            android:paddingTop="2dp"
            android:textColor="@color/light_teal"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/ad_borrows"
            app:layout_constraintTop_toBottomOf="@id/ad_borrows"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/teal_background_2"
            android:fontFamily="@font/poppins_light"
            android:text="Add to Cart"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/img_ad"
            app:layout_constraintTop_toBottomOf="@id/ad_borrows"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="@id/img_ad"
            app:layout_constraintTop_toBottomOf="@id/btn_borrow"
            android:src="@drawable/my_neighborhood_logo"
            android:layout_marginTop="8dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_profile"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            android:text="Syed Mohammad Hadi"
            android:textColor="@color/g_gray500"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_thin"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>